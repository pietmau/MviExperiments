<?xml version="1.0" encoding="utf-8"?>

<com.pppp.mvicoreapp.main.view.customview.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ProgressBar
        android:layout_width="@dimen/small_progress_size"
        android:layout_height="@dimen/small_progress_size"
        android:layout_centerInParent="true" />

    <com.pppp.mvicoreapp.main.view.customview.SquareImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop" />

    <TextView
        android:gravity="center"
        android:id="@+id/item_title"
        style="@style/MarvelStyle"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</com.pppp.mvicoreapp.main.view.customview.SquareLayout>
