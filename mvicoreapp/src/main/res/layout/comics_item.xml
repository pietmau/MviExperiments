<?xml version="1.0" encoding="utf-8"?>

<com.marvel.marvel.customview.SquareLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <ProgressBar
        android:layout_centerInParent="true"
        android:layout_width="@dimen/small_progress_size"
        android:layout_height="@dimen/small_progress_size" />

    <com.marvel.marvel.customview.SquareImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:scaleType="centerCrop"
        />

</com.marvel.marvel.customview.SquareLayout>
